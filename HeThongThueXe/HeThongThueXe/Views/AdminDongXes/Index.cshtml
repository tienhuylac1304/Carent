@model IEnumerable<HeThongThueXe.Models.DongXe>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>The Car</h2>

<p style="float:right">
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Ten)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.SoCho)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Gia)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Ten)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.SoCho)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Gia)
    </td>

    <td>
        <a href="@Url.Action( "Edit", new { id = item.ID })" style="color:lightgreen">Edit</a> |
        <a href="@Url.Action( "Delete", new { id = item.ID })" style="color:orangered">Delete</a>
    </td>
</tr>
}

</table>
