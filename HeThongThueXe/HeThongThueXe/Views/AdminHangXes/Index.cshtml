@model IEnumerable<HeThongThueXe.Models.HangXe>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Brand</h2>

<p style="float:right">
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Ten)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Ten)
        </td>
        <td>
            <a href="@Url.Action("Edit", "AdminHangXes", new { id=item.ID })" style="color:lightgreen" >Edit</a> |
            <a href="@Url.Action("Delete", "AdminHangXes", new { id=item.ID })" style="color:orangered">Delete</a>
        </td>
    </tr>
}

</table>
